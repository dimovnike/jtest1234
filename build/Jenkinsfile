node {
    stage('Clone repository') {
        /* 
        aws ECR autologin
        pipeline variables: registry, env, build-mode
        */

        checkout scm

        GIT_COMMIT = sh (
            script: 'git describe --always',
            returnStdout: true
        ).trim()
    }

    def REGISTRY='https://757692613158.dkr.ecr.eu-central-1.amazonaws.com'
    def ENV='dev'

    // define apps to build here, format is [app, from]
    def apps = [['http', 'http from'], ['cron', 'cron from']]
    // test

    apps.each {
        def app;
        
        stage("Build image: ${it[0]}, from: ${it[1]}") {
            app = docker.build("${ENV}/${it[0]}", "-f ./build/${it[0]}/Dockerfile .")
        }

        stage("Test image ${it[0]}") {
            app.inside {
                sh 'echo "Tests CRON passed"'
            }
        }

        stage("Push image ${it[0]}") {
            docker.withRegistry("${REGISTRY}", 'aws-tb-60') {
                app.push("${GIT_COMMIT}")
                app.push("latest")
            }
        }
    }
}